{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      // Shared
      "@crud/*": ["src/shared/crud/*"],
      "@definitions/*": ["src/shared/definitions/*"],
      "@config/*": ["src/shared/config/*"],
      "@handlers/*": ["src/shared/handlers/*"],
      "@filters/*": ["src/shared/filters/*"],
      "@guards/*": ["src/shared/guards/*"],
      "@interceptors/*": ["src/shared/interceptors/*"],
      "@middlewares/*": ["src/shared/middlewares/*"],
      "@pipes/*": ["src/shared/pipes/*"],
      "@decorators/*": ["src/shared/decorators/*"],
      "@database/*": ["src/shared/database/*"],

      // Modules
      "@modules/*": ["src/modules/*"]
    }
  }
}
